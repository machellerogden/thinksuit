{
  "name": "thinksuit-monorepo",
  "version": "0.0.2",
  "private": true,
  "description": "ThinkSuit monorepo - AI orchestration system with modular cognitive architecture",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "console": "npm -w thinksuit-console run dev --",
    "tty": "npm -w thinksuit-tty run dev --",
    "mcp": "npm -w thinksuit-mcp-server run start --",
    "cli": "npm -w thinksuit run cli --",
    "build": "npm run build --workspaces --if-present",
    "publish": "npm run publish --workspaces --if-present",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "version:patch": "./scripts/version.sh patch",
    "version:minor": "./scripts/version.sh minor",
    "version:major": "./scripts/version.sh major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machellerogden/thinksuit.git"
  },
  "bugs": {
    "url": "https://github.com/machellerogden/thinksuit/issues"
  },
  "homepage": "https://github.com/machellerogden/thinksuit#readme",
  "author": {
    "name": "Mac Heller-Ogden",
    "email": "mac@machellerogden.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
